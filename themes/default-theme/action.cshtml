@using CommunicatorCms.Core.Settings;
@using System.Net.Http;
@using CommunicatorCms.Core.AppFileSystem;

@inject IHttpClientFactory httpClientFactory

@{ 
    Layout = null;

    var httpClient = httpClientFactory.CreateClient();

    var resource = Context.Request.Query[QuerySettings.ResourceParameter];
    var resourcePath = AppPath.Join(GeneralSettings.WebRootPath, resource);

    await Html.RenderPartialAsync(resourcePath + ".cshtml");
}